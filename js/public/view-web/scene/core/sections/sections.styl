.section.featuredHero
	animation(fadeIn ease-in .6s)
	background linear-gradient(180deg,rgba(0,0,0,.35), rgba(0,0,0,.35)), url('https://images.unsplash.com/photo-1424847651672-bf20a4b0982b?dpr=1&auto=format&crop=entropy&fit=crop&w=1500&h=1000&q=80&cs=tinysrgb')
	background-repeat no-repeat
	background-size cover
	background-position center center
	.hero
		position relative
		max-width 800px
		padding buffer*2
		margin 0 auto
		text-align center
		color white
		animation(fadeInUp ease-in-out 1s)
		.heroTitle
			font-size 60px
			margin-top 170px
		.heroText
			font-size 28px
			font-family secondaryFontFamily
		@media only screen and (max-width: 600px)
			height 250px
			.heroTitle
				margin-top 0
				font-size 48px
			.heroText
				font-size 16px
			

.section.featured
	display block
	max-width maxPageWidth
	margin 0 auto
	
	.header
		.featuredText
			font-family secondaryFontFamily
			font-size 17px
			
	.content
		margin-bottom buffer*4







