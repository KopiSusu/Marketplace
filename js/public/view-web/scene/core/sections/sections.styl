@import './../global.styl'

detailHeight = 390px

hidden(shift, height)
	height height
	width 100%
	background #fff
	border-top 1px solid strokeColor
	color fontColor
	transform translate3d(0, shift, 0)
	transition()

.sections
	.header
		position relative
		text-align center
		display block
		height 50px
		width 50%
		margin buffer*2 auto buffer*4 auto
		h1
			display inline-block
			text-transform uppercase
			font-size 18px
			font-weight 500
			height 50px
			line-height 50px
			letter-spacing 5px
			background bgColor
			padding 0 (buffer * 5)
		.line
			position absolute
			top 0
			left 0
			height 36px
			width 100%
			z-index -1
			border-bottom 1px solid fontColor
	.section
		padding (buffer * 3.5) 0
		&.noPadding
			padding 0
		.blob
			text-align center
		ul
			padding 0 (buffer * 6)
			.cards
				padding buffer*3
				.card
					transition()
					position relative
					height auto
					border-radius radius
					overflow hidden
					cursor pointer
					color fontColorLight
					.image
						position relative
						height 270px
						background-size cover
						background-repeat no-repeat
						background-position center
						overflow hidden
					.cardActions
						display inline-block
						position absolute
						top -80px
						right buffer*2
						transition()
						.action
							display inline-block
							height 32px
							width 32px
							&.follow
								margin-left buffer
							svg
								path, polygon
									transition()
									fill white
							&:hover
								svg path, svg polygon
									transition()
									fill primaryColor
					.price
						margin buffer 0
						text-align right
						font-weight 600
						font-size 16px
					.name
						margin buffer 0
						font-size 16px
						font-weight 600
					.profileImage
						display inline-block
						border-radius 100%
						height 30px
						width 30px
						margin-right buffer
						background-size cover
						opacity .5
						transition()
					.cook
						// text-align center
						.profileImage
							display inline-block
						.cookName
							display inline-block
							font-size 13px
							margin-top 5px
					.details
						.detail
							display block
							.icon
								height 20px
								padding 0
								display inline-block
							p
								display inline-block
					&:hover
						opacity .9
						color fontColor
						transition()
						.profileImage
							transition()
							opacity 1
						.cardActions
							transition()
							top buffer*2
		.navigation
			text-align center
			text-transform uppercase
			padding-bottom (buffer * 4)
			.wrapper
				display inline-block
				transition()
				&:hover 
					h2
						opacity 0.5
				h2
					display inline-block
					padding-bottom buffer
					margin 0 buffer*2
					cursor pointer
					border-bottom 1px solid bgColor
					transition()
					&:hover
						opacity 1
					&.selected
						border-bottom 1px solid secondaryColor
		.hero
			height 400px
			width 100%	
			overflow hidden
			background-size cover
			background-repeat no-repeat
			background-position center
			margin-bottom (buffer * 2)
			video
				width 100%
				height 100%
		.map
			height 600px
			.marker
				position absolute
				width markerSize
				height markerSize
				left (markerSize / -2)
				top (-1 * (markerSize - 10))
				border-radius 50%
				overflow hidden
				background-size cover
				background-repeat no-repeat
				background-position center
				border 2px solid primaryColor
				z-index 10
				transition()
				&:after
					top: (markerSize - 2);
					left: (markerSize / 2);
					border: solid transparent;
					content: " ";
					height: 0;
					width: 0;
					position: absolute;
					pointer-events: none;
					border-top-color: primaryColor;
					border-width: 10px;
					margin-left: -10px;
					transition()
				&:hover
					border 2px solid #333
					transition()
					&:after
						border-top-color: #333
						transition()