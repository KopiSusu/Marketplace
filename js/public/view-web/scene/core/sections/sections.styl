					height 150px
					width 150px
					border-radius 100%
					margin -75px auto 0 auto
					@media only screen and (max-width: 600px)
						width 100px
						height 100px
						margin -50px auto 0 auto
				.bio
					position relative
					background bgColorDark
					padding buffer*3 buffer*12
