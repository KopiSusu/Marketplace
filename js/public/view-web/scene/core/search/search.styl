@import './../global.styl'

.search
	z-index 100
	display inline-block
	background bgColor
	left buffer
	margin -(buffer/1.5) buffer -(buffer/1.5) 0
	transition all 0.33s cubic-bezier(0.4, 0, 0.2, 1)
	.icon
		padding (buffer/2) 
		height (ribbonHeight * 0.6)
		display inline-block
		width (ribbonHeight * 0.4)
		margin-top 0
	&.closed
		padding 0 0 0 buffer
		cursor pointer			
		span
			display block
			p
				color fontColorLight
				display inline-block
				height (ribbonHeight * 0.6)
				line-height (ribbonHeight * 0.6)
		&:hover
			background bgColorDark
		@media only screen and (max-width: 600px)
			span p
				display none
	&.open
		position absolute
		height 300px
		width 450px
		border 1px solid strokeColor
		.icon
			padding (buffer/2) 0
		.inputs
			padding buffer
			border-bottom 1px solid strokeColor
			.input
				padding 0 (buffer/2) 0 0
				border 1px solid strokeColor
				height 100%
				div
					display inline-block
					height 100%
					width 5%
					cursor pointer
					&:hover
						-webkit-transform scale(1.1)
						-moz-transform scale(1.1)
						-ms-transform scale(1.1)
						transform scale(1.1)
				input
					display inline-block
					height 100%
					width 95%
					border 0
					&:focus
						border 0
				.icon
					height 100%
					width 100%
					border-left 0
					margin-top 0
		.view
			overflow hidden
			.nav
				nav
					display table
					width 100%
					text-align center
					div
						display table-cell
						vertical-align middle	
				.icon
					margin-top 0
				.tab
					border-left 1px solid strokeColor
					border-bottom 1px solid strokeColor
					background bgColorDark
					text-align center
					cursor pointer
					padding (buffer/2)
					&:first-of-type
						border-top 1px solid strokeColor
						&.selected
							border-top 1px solid transparent
					&:last-of-type
						border-bottom 0
					&.selected
						background bgColor
						border-top 0
						border-left 1px solid white
			.filter
				overflow auto
				.item
					background bgColor
					min-height 50px
					border 1px
					cursor pointer
					transition()
					&:hover
						background bgColorDark
					.image
						display inline-block
						background-size cover
						background-repeat no-repeat
						background-position center
						height 50px
						width 50px
						border-radius 100%
						margin (buffer/2) (buffer/2) (buffer/2) buffer
					.text 
						display inline-block
						padding (buffer / 2)
						width 'calc(100% - %s)' % 100px 
						p
							line-height 25px
							&.tag
								font-size 11px
								height 20px
								line-height 20px
								margin (buffer / 3)
								padding 0 (buffer / 3)
								display inline-block
								background primaryColor
								color #fff	
							&.address
								font-size 11px
								color fontColorLight
					&.chefs	
						.image
							height 50px
							width 50px
							margin 7.5px
							border-radius 50%	
							background-size cover					