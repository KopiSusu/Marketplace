
//Global Color vars
primaryColor = #FFC13C 
secondaryColor = #ff7b7b 
bgColor = #fff
bgColorDark = #f3f3f3
bgColorExtraDark = #ddd
strokeColor = #dce0e0
fbColor = #4c69ba
radius = 3px
fontColor = #333
fontColorLight = #888

markerSize = 50px

searchWidth = 200px

buffer = 12px

border = 1px solid strokeColor

ribbonHeight = 50px

// Global styles

body 
	background bgColor
	font-family "Oswald" !important
	text-transform uppercase !important
	color fontColor
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	text-shadow rgba(0, 0, 0, .01) 0 0 1px
	*
		box-sizing border-box
		vertical-align top
		
.scroll
	overflow auto

//Global Mixins
shadow()
	-webkit-box-shadow 0px 1px 2px 0px rgba(0,0,0,0.2)
	-moz-box-shadow 0px 1px 2px 0px rgba(0,0,0,0.2)
	box-shadow 0px 1px 2px 0px rgba(0,0,0,0.2)

transition()
	-webkit-transition: all 0.33s cubic-bezier(0.4, 0, 0.2, 1);
	-moz-transition: all 0.33s cubic-bezier(0.4, 0, 0.2, 1);
	-o-transition: all 0.33s cubic-bezier(0.4, 0, 0.2, 1);
	transition: all 0.33s cubic-bezier(0.4, 0, 0.2, 1);

