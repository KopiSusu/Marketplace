//inputs
input
	width 100%
	height ribbonHeight
	padding buffer
	border 1px solid strokeColor
	border-radius 0
	-webkit-appearance none
	&:focus
		outline none
		border 1px solid secondaryColor

input[type='checkbox']
	width auto
	margin-right buffer
	min-width 10px
	min-height 10px
	&:checked
		background #333
	
label.checkboxLabel
	color fontColorLight

//Typogrophy
h1
	font-size 17px
	margin 0
	
p
	font-size 13px
	margin 0
	&.secondaryText
		color fontColorLight

//Containers
.window
	position absolute
	overflow hidden
	width 100%
	height 100%
	
.scroll
	position absolute
	overflow auto
	width 100%
	height 100%
	
.container
	width 100%
	padding 0
	
.box
	background-color bgColorLight
	padding buffer * 2
	shadow()
						
				
//Icons
.icon
	text-align right
	display inline-block
	height ribbonHeight - 1
	padding buffer (buffer / 2)
	svg
		height 100%
		width 100%
		vertical-align top !important
	&.interactive
		cursor pointer
		&:hover
			svg
				fill primaryColor
		&:active
			svg
				fill primaryColor
	&.right
		float right
	&.left
		float left
	&.dim
		opacity 0.3
	&.online				
		svg
			fill primaryColor
				

