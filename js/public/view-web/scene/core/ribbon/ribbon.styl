@import './../global.styl'

.ribbon
	text-transform uppercase
	position relative
	height ribbonHeight
	background bgColor
	
	a 
		text-decoration none

	.ribbonNavigationLinks
		position absolute
		left buffer
		margin 20px 0
		height 29px
	.ribbonAccountLinks
		position absolute
		top 0
		right buffer
		margin 20px 0
		height 29px
	.ribbonLink
		display	inline-block
		text-align center
		cursor pointer
		height ribbonHeight
		padding 0px buffer
		color fontColorLight
		transition()
		&:hover
			color fontColor
			transition()
		
	h1
		text-align center
	.brand
		background-image url('https://s3.amazonaws.com/homemade-images/the_foodworks.jpg')
		background-size cover
		background-repeat no-repeat
		background-position center
		text-align center
		margin-top buffer
		height ribbonHeight - buffer*2
		&.bigNav
			margin-left calc(23.3% - 100px)
	.back
		cursor pointer
		p
			display inline-block
		.icon
			margin-left buffer

	.navigation
		text-align center
		text-transform uppercase
		letter-spacing 3px
		padding (buffer*1.5) 0
		background white
		.wrapper
			display inline-block
			transition()
			&:hover 
				h2
					opacity 0.5
			h2
				display inline-block
				margin 0 buffer*3
				cursor pointer
				border-bottom 1px solid bgColor
				font-weight 400
				font-size 18px
				transition()
				&:hover
					opacity 1
				&.selected
					border-bottom 1px solid secondaryColor
		@media only screen and (max-width: 600px)
			letter-spacing 1px
			.wrapper
				h2
					margin 0 (buffer/1.5)
					font-size 15px	
					
	.smallNavigation
		text-align center
		text-transform uppercase
		letter-spacing 3px
		padding (buffer*1.5) 0
		background white
		display inline-block
		.wrapper
			display inline-block
			transition()
			&:hover 
				h2
					opacity 0.5
			h2
				display inline-block
				margin 0 buffer*3
				cursor pointer
				border-bottom 1px solid bgColor
				font-weight 400
				font-size 13px
				transition()
				&:hover
					opacity 1
				&.selected
					border-bottom 1px solid secondaryColor
		@media only screen and (max-width: 600px)
			letter-spacing 1px
			.wrapper
				h2
					margin 0 (buffer/1.5)
					font-size 15px	

	@media only screen and (max-width: 600px)
		.logo
			margin-left 0
			margin-right 0

.pageHeader
	.brand
		display block
		margin buffer auto
		width 240px

.smallPageHeader
	position fixed
	width 100%
	z-index 1000
	height 50px
	background white
	.ribbon
		shadow()
		.back
			display inline-block
		.brand
			display inline-block
			width 100px
		.ribbonNavigationLinks
			position static
			display inline-block

		.smallNavigation
			margin-left buffer
			padding 0 buffer
			margin-top buffer*1.5
			border-left border
			
			.wrapper 
				padding-top 2px
				h2
					font-size 16px
					letter-spacing 0
					margin 0 buffer
	@media only screen and (max-width: 1160px)
		.ribbon
			.sellLink
				display none
