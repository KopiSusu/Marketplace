@import './../global.styl'

.ribbon
	height ribbonHeight
	padding 0 0
	background bgColor
	position fixed
	z-index 1000
	.ribbonDiv
		display	inline-block
		text-align center
	h1
		text-align center
	.logo
		background-image url('https://s3.amazonaws.com/homemade-images/the_foodworks.jpg')
		background-size contain
		background-repeat no-repeat
		background-position center
		margin-top buffer
		margin-left calc(23.3% - 100px)
		height ribbonHeight - buffer*2
	.back
		position absolute
		cursor pointer
		transition()
		p
			display inline-block
			line-height ribbonHeight
			height ribbonHeight
		.icon
			margin-left buffer
		&:hover
			-webkit-transform scale(1.3)
			-moz-transform scale(1.3)
			-ms-transform scale(1.3)
			transform scale(1.3)
	.navigation
			text-align center
			text-transform uppercase
			letter-spacing 3px
			padding (buffer*1.5) 0
			background white
			.wrapper
				display inline-block
				transition()
				&:hover 
					h2
						opacity 0.5
				h2
					display inline-block
					margin 0 buffer*3
					cursor pointer
					border-bottom 1px solid bgColor
					font-weight 400
					font-size 18px
					transition()
					&:hover
						opacity 1
					&.selected
						border-bottom 1px solid secondaryColor
			@media only screen and (max-width: 600px)
				letter-spacing 1px
				.wrapper
					h2
						margin 0 (buffer/1.5)
						font-size 15px	
		
	@media only screen and (max-width: 600px)
		.logo
			margin-left 0
			margin-right 0
			